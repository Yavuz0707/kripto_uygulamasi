<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CryptoGuard.MAUI"
             xmlns:conv="clr-namespace:CryptoGuard.MAUI.Converters"
             xmlns:converters="clr-namespace:CryptoGuard.MAUI.Converters"
             x:Class="CryptoGuard.MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <conv:NullToBoolConverter x:Key="NullToBoolConverter" />
            <conv:IsStringNullOrEmptyConverter x:Key="IsStringNullOrEmptyConverter" />
            <conv:ProfitColorConverter x:Key="ProfitColorConverter" />
            <conv:ProfitIconConverter x:Key="ProfitIconConverter" />
            <converters:LikeIconConverter x:Key="LikeIconConverter" />
            <converters:FollowButtonTextConverter x:Key="FollowButtonTextConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Converters.xaml" />
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Koyu Tema Renkleri -->
            <Color x:Key="PageBackgroundColor">#232136</Color>
            <Color x:Key="FrameBackgroundColor">#313244</Color>
            <Color x:Key="TextColor">#cdd6f4</Color>
            <Color x:Key="SecondaryTextColor">#b4befe</Color>
            <Color x:Key="AccentColor">#7c3aed</Color>
            <Color x:Key="ButtonBackgroundColor">#7c3aed</Color>
            <Color x:Key="ButtonTextColor">White</Color>
            <Color x:Key="DangerColor">#f38ba8</Color>
            <!-- Açık Tema Renkleri (Light) -->
            <ResourceDictionary x:Key="LightThemeColors">
                <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
                <Color x:Key="FrameBackgroundColor">#F3F3F3</Color>
                <Color x:Key="TextColor">#232136</Color>
                <Color x:Key="SecondaryTextColor">#4B4B6B</Color>
                <Color x:Key="AccentColor">#7c3aed</Color>
                <Color x:Key="ButtonBackgroundColor">#7c3aed</Color>
                <Color x:Key="ButtonTextColor">White</Color>
                <Color x:Key="DangerColor">#e57373</Color>
            </ResourceDictionary>
        </ResourceDictionary>
    </Application.Resources>
</Application>
